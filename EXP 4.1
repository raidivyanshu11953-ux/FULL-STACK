const readline = require("readline");

// Create interface for user input
const rl = readline.createInterface({
  input: process.stdin,
  output: process.stdout
});

// Store employees in an array
let employees = [
  { name: "Alice", id: "E101" },
  { name: "Bob", id: "E102" },
  { name: "Charlie", id: "E103" }
];

// Main menu display
function showMenu() {
  console.log("\nEmployee Management System");
  console.log("1. Add Employee");
  console.log("2. List Employees");
  console.log("3. Remove Employee");
  console.log("4. Exit");
  rl.question("Enter your choice: ", handleChoice);
}

// Handle user choice
function handleChoice(choice) {
  switch (choice.trim()) {
    case "1":
      addEmployee();
      break;
    case "2":
      listEmployees();
      break;
    case "3":
      removeEmployee();
      break;
    case "4":
      console.log("Exiting... 👋");
      rl.close();
      break;
    default:
      console.log("❌ Invalid choice, try again!");
      showMenu();
  }
}

// Add new employee
function addEmployee() {
  rl.question("Enter employee name: ", (name) => {
    rl.question("Enter employee ID: ", (id) => {
      employees.push({ name: name.trim(), id: id.trim() });
      console.log(`✅ Employee ${name} (ID: ${id}) added successfully.`);
      showMenu();
    });
  });
}

// List all employees
function listEmployees() {
  if (employees.length === 0) {
    console.log("⚠️ No employees found.");
  } else {
    console.log("\nEmployee List:");
    employees.forEach((emp, index) => {
      console.log(`${index + 1}. Name: ${emp.name}, ID: ${emp.id}`);
    });
  }
  showMenu();
}

// Remove employee by name
function removeEmployee() {
  rl.question("Enter the name of the employee to remove: ", (name) => {
    const originalLength = employees.length;
    employees = employees.filter(emp => emp.name.toLowerCase() !== name.toLowerCase());

    if (employees.length < originalLength) {
      console.log(`✅ Employee '${name}' removed successfully.`);
    } else {
      console.log(`❌ No employee found with the name '${name}'.`);
    }
    showMenu();
  });
}

// Start the program
showMenu();
